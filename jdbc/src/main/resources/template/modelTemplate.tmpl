        <%if (fieldBean.idFlag == true) {%>
        Table.Column(field = "<%=fieldBean.name%>", column = "<%=fieldBean.column%>", idFlag = <%=fieldBean.idFlag%>),
        <%} else {%>
        Table.Column(field = "<%=fieldBean.name%>", column = "<%=fieldBean.column%>"),
        <%}%>
    <%}%>
<%}%>
    ]
)
