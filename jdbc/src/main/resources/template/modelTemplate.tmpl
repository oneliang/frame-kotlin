    <%=overrideString%>var <%=fieldBean.name%>: Long<%=nullableString%> = <%=(defaultValue.length != 0 ? defaultValue : 0)%>
    <%} else if (type == 3) {%>
    <%=overrideString%>var <%=fieldBean.name%>: Float<%=nullableString%> = <%=(defaultValue.length != 0 ? defaultValue : 0.0)%>
    <%} else if (type == 4) {%>
    <%=overrideString%>var <%=fieldBean.name%>: Double<%=nullableString%> = <%=(defaultValue.length != 0 ? defaultValue : 0.0)%>
    <%} else if (type == 5) {%>
    <%=overrideString%>var <%=fieldBean.name%>: Date<%=nullableString%> = <%=defaultValue%>
    <%} else if (type == 6) {%>
    <%=overrideString%>var <%=fieldBean.name%>: BigDecimal<%=nullableString%> = <%=(defaultValue.length != 0 ? defaultValue : "BigDecimal(0)")%>
    <%}%>
<%}%>
