    <%var nullable = fieldBean.nullable;%>
    <%var nullableString = (nullable? "?": "");%>
    <%var defaultValue = fieldBean.defaultValue;%>
    <%if (type == 0){%>
    <%=overrideString%>var <%=fieldBean.name%>: String<%=nullableString%> = <%=(defaultValue.length != 0 ? defaultValue : "\"\"")%>
