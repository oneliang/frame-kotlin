        const val COLUMN_<%=fieldBean.name.toUpperCase()%> = "{<%=className%>.<%=fieldBean.name%>}"
<%}%>
    }

<%for(var i=0;i<fieldArray.length;i++){%><%var fieldBean = fieldArray[i];%>
    <%var overrideString = (fieldBean.override ? "override " : "");%>
